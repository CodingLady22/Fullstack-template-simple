<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="">
    <title>Edit Page</title>
</head>
<body>
    <section>
        <h1>Edit your item</h1>
        <section>
            <ul>
                <% itemList.forEach(item=> { %>
                    <% if (item._id == itemId ) { %> 
                        <li>
                            <form action="/edit/update<%= item._id%>" method="POST">
                                <label for= "textInput">Input Text</label>
                                <input type= "text" name= "textInput" value="<%= item.textInput %>">
                                <label for="numInput">Input Number</label>
                                <input type = "number" name = "numInput" value = "<%= item.numInput %>">
                                <button type= "submit">Confirm Edit</button>
                                <a href="/">Cancel</a>
                            </form>
                        </li>
                    <% } else { %>
                        <li>
                            <div>
                                <%= item.textInput %>
                            </div>
                            <div>
                                <%= item.numInput %>
                            </div>
                            <a href="#">Edit</a>
                            <a href="#">Delete</a>
                        </li>
                    <% } %>
                <% }) %>
            </ul>
        </section>
    </section>
</body>
</html>